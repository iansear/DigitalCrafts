<html>
<body>
    <h1>BlogDB App</h1>

    {{#post}}
        <form method="POST" action="/posts/mypost-delete">
            <input name="id" type="hidden" value="{{id}}"/>
            <button>Delete Post</button>
        </form>
        <p>{{id}}</p>
        <b>{{title}}</b>
        <p>{{body}}</p>
        <p>{{category}}</p>
        <form method="POST" action="/posts/mypost-update">
            <input name="id" type="hidden" value="{{id}}"/>
            <input name="title" type="text" value="{{title}}"/></br>
            <textarea name="body" rows="4" cols="50">{{body}}</textarea></br>
            <select name="category">
                <option value="tangential_rant">Tangential Rant</option>
                <option value="this">This</option>
                <option value="that">That</option>
                <option value="other">Other</option>
            </select></br>
            <button>Update Post</button>
        </form>
        {{#comments}}
            <p>{{id}}</p>
            <p>{{comment}}</p>
            <form method="POST" action="/posts/delete-comment">
                <input name="id" type="hidden" value="{{id}}"/>
                <input name="postid" type="hidden" value="{{post.id}}"/>
                <button>Delete</button>
            </form>
        {{/comments}}
    {{/post}}

</body>
</html>